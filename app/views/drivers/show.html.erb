<br>
<h3>Driver Details for <%= @driver.name %></h3>
<br>
<table class="table">
  <tr>
    <th>Status</th>
    <th>VIN</th>
    <th>Trips</th>
    <th>Total</th>
    <th>Net Earnings</th>
    <th>Avg. Rating</th>
  </tr>
  <tr>
  <td>
    <% if @driver.available %>
      <%= "Available" %>
    <% else %>
      <%= "Unavailable" %>
    <% end %>
  </td>
  <td><%= @driver.vin %></td>
  <td><%= link_to "View All Trips", driver_trips_path(@driver.id) %></td>
  <td><%= number_to_currency(@driver.gross_earnings)%></td>
  <td><%= number_to_currency(@driver.net_earnings) %></td>
  <td><%= number_with_precision(@driver.average_rating, :precision => 2)%></td>
  </tr>
</table>

<br>
<div class="info">
    <%= link_to 'Back', drivers_path %> ||
    <%= link_to 'Edit', edit_driver_path %> ||
    <%= link_to 'Delete', driver_path(@driver.id), method: :delete, data: {
        confirm: "Are you sure you want to delete this passenger?" } %> ||
    <%= link_to "Add a Trip", new_driver_trip_path(@driver.id) %>
</div>